{
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%WORKSPACE_FOLDER%/build/%RELATIVE_DIR%",
                "%DOC%"
            ],
            "env": {}
        }
    ]
}